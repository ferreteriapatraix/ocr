{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ],
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  }
}